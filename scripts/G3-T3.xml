<Root>
    <!--测试RLAction有经验填充学习开门-->
    <OneShot>
        <Sequence>
            <IsDoorOpen/>
            <!--开门的奖励-->
            <Reward domain="open_door" reward="0.5"/>
        </Sequence>
    </OneShot>

    <RLSwitcher
            algo="SAC"
            name="SAC-RLSwitcher"
            domain="default"
            path="{{models_dir}}/{{name}}"
            save_path="{{models_dir}}/{{name}}"
            save_interval="20"
            tensorboard_log="{{logs_dir}}/{{name}}"
            log_interval="1"
            verbose="0"
            exp_fill="false"
            train="{{train}}">

        <ExploreUnseen name="探索"/>
        <ApproachKey name="接近钥匙"/>
        <PickUpKey name="拿钥匙"/>
        <ApproachDoor name="接近门"/>
        <!--        <OpenDoor name="打开门"/>-->
        <MoveToGoal name="移动到终点"/>
        
        <RLAction
                algo="SAC"
                name="SAC-RLAction"
                domain="open_door"
                path="{{models_dir}}/{{name}}"
                save_path="{{models_dir}}/{{name}}"
                save_interval="20"
                tensorboard_log="{{logs_dir}}/{{name}}"
                log_interval="1"
                verbose="0"
                exp_fill="true"
                train="{{train}}"
        />
