<Root>

    <OneShot>
        <Sequence>
            <IsDoorOpen/>
            <!--开门的奖励-->
            <Reward domain="open_door" reward="0.1"/>
        </Sequence>
    </OneShot>

    <RLSwitcher
            algo="SAC"
            name="SAC-RLSwitcher-经验填充"
            domain="default,open_door"
            path="{{models_dir}}/{{name}}"
            save_path="{{models_dir}}/{{name}}"
            save_interval="50"
            tensorboard_log="{{logs_dir}}/{{name}}"
            log_interval="1"
            verbose="0"
            exp_fill="true"
            train="{{train}}">

        <TurnLeft/>
        <TurnRight/>
        <MoveForward/>
        <Pickup/>
        <Drop/>
        <Toggle/>

        <ApproachKey name="接近钥匙"/>
        <PickUpKey name="拿钥匙"/>
        <!--        <OpenDoor name="打开门"/>-->
        <ApproachDoor name="接近门"/>
    </RLSwitcher>
</Root>
